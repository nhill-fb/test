    title: section.settings.left_title,
    subtitle: section.settings.left_subtitle, 
    body_text: section.settings.left_message,
    text_align: section.settings.left_text_align,
    width: section.settings.left_message_width,
    text_layout: section.settings.left_text_layout,
    text_pos: section.settings.left_text_pos,
    text_pos_mobile: section.settings.left_text_pos_mobile,
    link_text: section.settings.left_link_text,
    img: section.settings.left_image,
    btn_color: section.settings.left_btn_color,
    btn_bg: section.settings.left_btn_bg,
    mobile_image: section.settings.left_image_mobile,
    bg: section.settings.left_bg, 
    color: section.settings.left_color,
    link: section.settings.left_link,
    link_type: section.settings.left_link_type -%}
{%-endcapture-%}
