{%- assign padding = 
  section.settings.padding-type-top-bottom 
    | append: section.settings.padding-top-bottom 
    | append: ' '
    | append: section.settings.padding-type-left-right
    | append: section.settings.padding-left-right
-%}
{%- include 'template__text'
  bg: section.settings.bg,
  title: section.settings.title,
  subtitle: section.settings.subtitle,
  content: section.settings.html,
  color: section.settings.color,
  max_width: section.settings.message_width,
  text_align: section.settings.text_align,
  padding: padding
-%}

{% schema %}
{
  "name": "Text Block",
  "settings": [    
    {
      "id": "bg",
      "type": "color",
      "label": "Background"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Heading"
    },
    {
      "id": "subtitle",
      "type": "text",
      "label": "Sub heading"
    },
    {
      "id": "html",
      "type": "html",
      "label": "Message"
    },
    {
      "id": "color",
      "type": "color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "id": "message_width",
      "type": "range",
      "label": "Message Width",
      "min": 10,
      "max": 1000,
      "unit": "px",
      "step": 10,
      "default": 1000
    },
    {
      "id": "padding-type-top-bottom",
      "type": "select",
      "label": "Top/Bottom Padding Type",
      "options": [
        {"label": "Top & Bottom", "value": "py-"},
        {"label": "Top Only", "value": "pt-"},
        {"label": "Bottom Only", "value": "pb-"}
      ],
      "default": "py-"
    },
    {
      "id": "padding-top-bottom",
      "type": "range",
      "min": 0,
      "max": 5,
      "default": 3,
      "step": 1,
      "label": "Top/Bottom Padding Preset"
    },
    {
      "id": "padding-type-left-right",
      "type": "select",
      "label": "Left/Right Padding Type",
      "options": [
        {"label": "Left & Right", "value": "px-"},
        {"label": "Left", "value": "pl-"},
        {"label": "Right", "value": "pr-"}
      ],
      "default": "px-"
    },
    {
      "id": "padding-left-right",
      "type": "range",
      "min": 0,
      "max": 5,
      "default": 3,
      "step": 1,
      "label": "Left/Right Padding Preset"
    },
    {
      "id": "text_align",
      "type": "select",
      "label": "Text Align",
      "default": "text-left",
      "options": [
        {
          "label": "Left",
          "value": "text-left"
        },
        {
          "label": "Center",
          "value": "text-center"
        },
        {
          "label": "Right",
          "value": "text-right"
        }
      ]
    } 
  ],
  "presets": [
    {
      "name": "Text/Html",
      "category": "Content"
    }
  ]
}
{% endschema %}
