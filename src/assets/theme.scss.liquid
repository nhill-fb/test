/*================ Responsive Show/Hide Helper ================*/
@mixin responsive-display-helper($breakpoint: '') {
  // sass-lint:disable no-important
  .#{$breakpoint}show {
    display: block !important;
  }

  .#{$breakpoint}hide {
    display: none !important;
  }
}


/*================ Responsive Text Alignment Helper ================*/
@mixin responsive-text-align-helper($breakpoint: '') {
  // sass-lint:disable no-important
  .#{$breakpoint}text-left {
    text-align: left !important;
  }

  .#{$breakpoint}text-right {
    text-align: right !important;
  }

  .#{$breakpoint}text-center {
    text-align: center !important;
  }
}

@mixin visually-hidden() {
  // sass-lint:disable no-important
  position: absolute !important;
  overflow: hidden;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
}

@mixin visually-shown($position: inherit) {
  // sass-lint:disable no-important
  position: $position !important;
  overflow: auto;
  clip: auto;
  width: auto;
  height: auto;
  margin: 0;
}

/*================ Last Margin Stopper ================*/
@mixin lastmargin($type)
{
  &:last-of-type {
    margin-#{$type}: 0px;
  }
}

/*================ iOS Safari Mobile Height Fix ================*/

@mixin iosSafari() {
  // Safari iPhone X Max fix
  @media (max-device-width: 414px) and (max-device-height: 896px) and (orientation:portrait) {
    height: 768px !important;
  }

  // Safari iPhone 8+ fix
  @media (max-device-width: 414px) and (max-device-height: 736px) and (orientation:portrait) {
    height: 630px !important;
  }

  // Safari iPhone X fix
  @media (max-device-width: 375px) and (max-device-height: 812px) and (orientation:portrait) {
    height: 712px !important;
  }

  // Safari iPhone 8 fix
  @media (max-device-width: 375px) and (max-device-height: 680px) and (orientation:portrait) {
    height: 567px !important;
  }

  // Safari iPhone 5 fix
  @media (max-device-width: 320px) and (max-device-height: 568px) and (orientation:portrait) {
    height: 524px !important;
  }
}
