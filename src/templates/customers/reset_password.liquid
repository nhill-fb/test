<div class="customers">
  <div class="customers__header">
    <h1>Reset Password</h1>
  </div>

  <div class="customers__forms">

    <div class="customers__form">
      {% form 'reset_customer_password' %}

        <h1>{{ 'customer.reset_password.title' | t }}</h1>

        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        <div class="input__wrapper {% if form.errors contains 'password' %}input__wrapper--error{% endif %}">
          <input type="password"
            name="customer[password]"
            id="ResetPassword"
            placeholder="{{ 'customer.reset_password.password' | t }}">

          <span toggle="#ResetPassword" class="toggle__password show-password">Show</span>

            <div class="input__error">Please enter a password.</div>
        </div>

        <div class="input__wrapper {% if form.errors contains 'password_confirmation' %}input__wrapper--error{% endif %}">
          <input type="password"
            name="customer[password_confirmation]"
            id="PasswordConfirmation"
            placeholder="{{ 'customer.reset_password.password_confirm' | t }}">

            <div class="input__error">Please confirm your password.</div>
        </div>

        <input type="submit" class="btn secondary on-light-bg" value="{{ 'customer.reset_password.submit' | t }}">
      {% endform %}
    </div>
  </div>
</div>
