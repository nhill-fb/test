<div class="accounts">
  <div class="accounts__container">

    <div class="accounts__register">
      <h1 class="accounts__title">{{ 'customer.register.title' | t }}</h1>

      {% form 'create_customer' %}
        {{ form.errors | default_errors }}
        <div class="form-group">
          <label for="FirstName" class="label-hidden">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input type="text"
            name="customer[first_name]"
            id="FirstName"
            class="form-control"
            required
            autofocus
            {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
        </div>
        <div class="form-group">
          <label for="LastName" class="label-hidden">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input type="text"
            name="customer[last_name]"
            id="LastName"
            required
            class="form-control"
            {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
        </div>
        <div class="form-group">
        <label for="RegisterEmail" class="label-hidden">
          {{ 'customer.register.email' | t }}
        </label>
        <input type="email"
          name="customer[email]"
          id="RegisterEmail"
          required
          class="form-control {% if form.errors contains 'email' %}input-error{% endif %}"
          value="{% if form.email %}{{ form.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">
        </div>
        <div class="form-group">
          <label for="CreatePassword" class="label-hidden">
            {{ 'customer.register.password' | t }}
          </label>
          <input type="password"
            name="customer[password]"
            required
            id="CreatePassword"
            class="form-control {% if form.errors contains 'password' %}input-error{% endif %}"
            >
        </div>
        <div class="btn-group">
          <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn-primary btn-block">
          
          <a class="btn btn-outline-primary btn-block" href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
        </div>
      {% endform %}
    </div>

  </div>
</div>
